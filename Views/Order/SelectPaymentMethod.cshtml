@model Projekt.Models.ViewModels.PaymentMethodViewModel

<div class="min-h-screen flex flex-col justify-center items-center bg-gray-100">
    <div class="bg-white shadow-lg rounded-lg p-8 w-full max-w-md">
        <h2 class="text-2xl font-bold text-center text-indigo-700 mb-6">Zvolte způsob platby</h2>

        <form asp-action="SelectPaymentMethod" method="post" class="space-y-6">
            <!-- Výběr způsobu platby -->
            <div class="flex flex-col">
                <label
                    asp-for="SelectedPaymentMethod"
                    class="block text-sm font-medium text-gray-700 mb-2"
                >
                    Způsob platby
                </label>
                <select
                    asp-for="SelectedPaymentMethod"
                    class="block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 text-gray-900"
                >
                    <option value="" disabled selected>-- Vyberte způsob platby --</option>
                    @foreach (var method in Model.AvailablePaymentMethods)
                    {
                        <option value="@method">@method</option>
                    }
                </select>
                <span asp-validation-for="SelectedPaymentMethod" class="text-sm text-red-500 mt-1"></span>
            </div>

            <!-- Tlačítko Pokračovat -->
            <div>
                <button
                    type="submit"
                    class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-2 px-4 rounded-md shadow focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
                >
                    Pokračovat
                </button>
            </div>
        </form>
    </div>
</div>
