@{
    ViewData["Title"] = "Domovská stránka";
}

<div class="relative bg-white overflow-hidden">
    <div class="max-w-7xl mx-auto">
        <div class="relative z-10 pb-8 bg-white sm:pb-16 md:pb-20 lg:w-full lg:pb-28 xl:pb-32">
            <main class="mt-10 mx-auto max-w-7xl px-4 sm:mt-12 sm:px-6 md:mt-16 lg:mt-20 lg:px-8 xl:mt-28">
                <div class="sm:text-center lg:text-left">
                    <h1 class="text-4xl tracking-tight font-extrabold text-gray-900 sm:text-5xl md:text-6xl">
                        <span class="block xl:inline">Připrav se na boj</span>
                        <span class="block text-indigo-600 xl:inline">s Muay Thai vybavením</span>
                    </h1>
                    <p class="mt-3 text-base text-gray-500 sm:mt-5 sm:text-lg sm:max-w-xl sm:mx-auto md:mt-5 md:text-xl lg:mx-0">
                        Nakup kvalitní vybavení pro Muay Thai - rukavice, chrániče, bandáže a další doplňky. Buď připraven na každý zápas!
                    </p>
                    <div class="mt-5 sm:mt-8 sm:flex sm:justify-center lg:justify-start">
                        <div class="rounded-md shadow">
                            <a href="#products" class="w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 md:py-4 md:text-lg md:px-10">
                                Podívat se na produkty
                            </a>
                        </div>
                        <div class="mt-3 sm:mt-0 sm:ml-3">
                            <a href="#about-us" class="w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-indigo-700 bg-indigo-100 hover:bg-indigo-200 md:py-4 md:text-lg md:px-10">
                                Více o nás
                            </a>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
    <div class="">
        <img class="h-40 w-full object-cover sm:h-72 md:h-96 lg:w-full lg:h-full" src="https://punchitgym.com/wp-content/uploads/2020/12/Wai-Kru-and-the-Mongkon-in-Muay-Thai-03.jpg" alt="Muay Thai gear">
    </div>
</div>

<!-- Sekce s nabídkou produktů -->
<div id="products" class="bg-gray-100 py-12">
    <div class="max-w-[1350px] mx-auto px-4 sm:px-6 lg:px-8">
        <div class="lg:text-center">
            <h2 class="text-base text-indigo-600 font-semibold tracking-wide uppercase">Naše nabídka</h2>
            <p class="mt-2 text-3xl leading-8 font-extrabold tracking-tight text-gray-900 sm:text-4xl">Objev vybavení pro bojovníky</p>
            <p class="mt-4 max-w-2xl text-xl text-gray-500 lg:mx-auto">
                Nabízíme široký sortiment produktů pro Muay Thai. Ať už jsi začátečník nebo pokročilý, u nás najdeš to nejlepší vybavení.
            </p>
        </div>
        <div class="mt-10">
            <div class="grid grid-cols-1 gap-10 sm:grid-cols-2 lg:grid-cols-3">
                <!-- Ukázka produktu -->
                <div class="bg-white shadow-lg rounded-lg overflow-hidden">
                    <img class="mt-7 max-h-[350px] w-full object-contain" src="https://fairtexstore.com/cdn/shop/products/41JBdRplkSL.jpg?v=1633962236&width=580" alt="Rukavice Muay Thai">
                    <div class="p-6">
                        <h3 class="font-semibold text-lg text-gray-900">Rukavice Muay Thai</h3>
                        <p class="mt-2 text-gray-600">Profesionální rukavice pro Muay Thai, které ti zajistí komfort a bezpečí během boje.</p>
                        <div class="mt-4">
                            <span class="text-indigo-600 font-bold">999 Kč</span>
                        </div>
                        <a href="#" class="block mt-4 text-indigo-600 hover:underline">Více informací</a>
                    </div>
                </div>
                <!-- Další produkty -->
                <div class="bg-white shadow-lg rounded-lg overflow-hidden">
                    <img class="mt-7 max-h-[350px] w-full object-contain" src="https://www.thefightfactory.com.au/cdn/shop/products/fairtex-hand-wraps-accessories-fairtex-thailand-muay-thai-boxing-hand-wraps-30221078003755.jpg?v=1721229017" alt="Bandáže Muay Thai">
                    <div class="p-6">
                        <h3 class="font-semibold text-lg text-gray-900">Bandáže Muay Thai</h3>
                        <p class="mt-2 text-gray-600">Ochrana a podpora pro tvoje ruce, ideální pro trénink i zápasy.</p>
                        <div class="mt-4">
                            <span class="text-indigo-600 font-bold">299 Kč</span>
                        </div>
                        <a href="#" class="block mt-4 text-indigo-600 hover:underline">Více informací</a>
                    </div>
                </div>
                <div class="bg-white shadow-lg rounded-lg overflow-hidden">
                    <img class="mt-7 max-h-[350px] w-full object-contain" src="https://www.sportheavy.eu/tuotekuvat/600x600/ggl-12mu400_1304_6ae_copy8.jpg" alt="Chrániče holení">
                    <div class="p-6">
                        <h3 class="font-semibold text-lg text-gray-900">Chrániče holení</h3>
                        <p class="mt-2 text-gray-600">Zajisti si ochranu během tréninku a zápasů s našimi kvalitními chrániči holení.</p>
                        <div class="mt-4">
                            <span class="text-indigo-600 font-bold">699 Kč</span>
                        </div>
                        <a href="#" class="block mt-4 text-indigo-600 hover:underline">Více informací</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Sekce "O nás" -->
<div id="about-us" class="bg-white py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-extrabold text-gray-900">O Nás</h2>
        <p class="mt-4 text-lg text-gray-600">
            Jsme specialisté na Muay Thai vybavení. Naším cílem je poskytovat kvalitní produkty pro všechny, kdo chtějí dosáhnout svých cílů v tomto úžasném bojovém sportu.
        </p>
        <div class="mt-8">
            <a href="#" class="text-indigo-600 hover:underline">Přečti si více o naší historii</a>
        </div>
    </div>
</div>
