<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/output.css" />

</head>

<body class="bg-gray-100 text-gray-900">
    <header>
        <nav class="bg-gray-800 p-4">
            <div class="container mx-auto flex justify-between items-center">
                <a class="text-white text-lg font-bold" href="#">Projekt</a>
                <ul class="flex space-x-4">
                    <li><a class="text-white hover:text-gray-300" href="/">Home</a></li>
                    <li><a class="text-white hover:text-gray-300" href="/Home/Privacy">Privacy</a></li>
                </ul>
            </div>
        </nav>
    </header>

    <div class="container mx-auto p-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-gray-800 text-white text-center py-4 mt-4">
        <div class="container mx-auto">
            &copy; 2024 - Projekt -
            <a class="text-white hover:underline" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
