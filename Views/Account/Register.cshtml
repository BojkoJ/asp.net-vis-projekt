@model Projekt.Models.RegisterViewModel

<div class="flex items-center justify-center min-h-screen bg-white">
    <div class="w-full max-w-md p-6 bg-white rounded-lg shadow-md border border-gray-200">
        <h1 class="text-2xl font-bold text-center text-indigo-700 mb-6">Registrace</h1>

        <!-- Chybová zpráva -->
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="mb-4 text-sm text-red-600">@Model.ErrorMessage</div>
        }

        <!-- Formulář -->
        <form asp-action="Register" method="post">
            @Html.AntiForgeryToken()
            <div class="mb-4">
                <label for="FirstName" class="block text-sm font-medium text-black">Jméno</label>
                <input 
                    type="text" 
                    id="FirstName" 
                    name="FirstName" 
                    class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md text-black focus:ring-indigo-500 focus:border-indigo-500"
                    placeholder="Zadejte své jméno"
                    required />
            </div>

            <div class="mb-4">
                <label for="LastName" class="block text-sm font-medium text-black">Příjmení</label>
                <input 
                    type="text" 
                    id="LastName" 
                    name="LastName" 
                    class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md text-black focus:ring-indigo-500 focus:border-indigo-500"
                    placeholder="Zadejte své příjmení"
                    required />
            </div>

            <div class="mb-4">
                <label for="Email" class="block text-sm font-medium text-black">E-mail</label>
                <input 
                    type="email" 
                    id="Email" 
                    name="Email" 
                    class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md text-black focus:ring-indigo-500 focus:border-indigo-500"
                    placeholder="Zadejte svůj e-mail"
                    required />
            </div>

            <div class="mb-4">
                <label for="Password" class="block text-sm font-medium text-black">Heslo</label>
                <input 
                    type="password" 
                    id="Password" 
                    name="Password" 
                    class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md text-black focus:ring-indigo-500 focus:border-indigo-500"
                    placeholder="Zadejte své heslo"
                    required />
            </div>

            <div class="mb-4">
                <label for="ConfirmPassword" class="block text-sm font-medium text-black">Potvrzení hesla</label>
                <input 
                    type="password" 
                    id="ConfirmPassword" 
                    name="ConfirmPassword" 
                    class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md text-black focus:ring-indigo-500 focus:border-indigo-500"
                    placeholder="Zadejte heslo znovu"
                    required />
            </div>

            <div class="mb-4">
                <button 
                    type="submit" 
                    class="w-full py-2 px-4 bg-indigo-700 text-white font-medium rounded-md hover:bg-indigo-600 focus:outline-none focus:ring focus:ring-indigo-300"
                >
                    Registrovat se
                </button>
            </div>
        </form>

        <p class="text-sm text-center text-black">
            Již máte účet? 
            <a href="/Account/Login" class="text-indigo-700 hover:underline">Přihlaste se</a>.
        </p>

    </div>
</div>
