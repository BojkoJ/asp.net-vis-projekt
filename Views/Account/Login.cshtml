@model Projekt.Models.LoginViewModel

@{
    ViewData["Title"] = ViewData["Title"] ?? "Přihlášení";
}

<div class="flex items-center justify-center min-h-screen bg-white">
    <div class="w-full max-w-md p-6 bg-white rounded-lg shadow-md border border-gray-200">
        <h1 class="text-2xl font-bold text-center text-indigo-700 mb-6">Přihlášení</h1>

        <!-- Formulář -->
        <form method="post">
            @Html.AntiForgeryToken()
            <div class="mb-4">
                <label for="Email" class="block text-sm font-medium text-black">E-mail</label>
                <input 
                    type="email" 
                    id="Email" 
                    name="Email" 
                    class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md text-black focus:ring-indigo-500 focus:border-indigo-500"
                    placeholder="Zadejte svůj e-mail"
                    required />
            </div>

            <div class="mb-4">
                <label for="Password" class="block text-sm font-medium text-black">Heslo</label>
                <input 
                    type="password" 
                    id="Password" 
                    name="Password" 
                    class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md text-black focus:ring-indigo-500 focus:border-indigo-500"
                    placeholder="Zadejte své heslo"
                    required />
            </div>

            <div class="flex items-center justify-between mb-4">
                <div>
                    <input 
                        type="checkbox" 
                        id="RememberMe" 
                        name="RememberMe" 
                        class="text-indigo-700 focus:ring-indigo-500"
                    />
                    <label for="RememberMe" class="ml-2 text-sm text-black">Zapamatovat si mě</label>
                </div>
                <a href="/Account/ForgotPassword" class="text-sm text-indigo-700 hover:underline">Zapomněli jste heslo?</a>
            </div>

            <div class="mb-4">
                <button 
                    type="submit" 
                    class="w-full py-2 px-4 bg-indigo-700 text-white font-medium rounded-md hover:bg-indigo-600 focus:outline-none focus:ring focus:ring-indigo-300"
                >
                    Přihlásit se
                </button>
            </div>
        </form>

        <!-- Registrovat -->
        <p class="text-sm text-center text-black">
            Nemáte účet? 
            <a href="/Account/Register" class="text-indigo-700 hover:underline">Zaregistrujte se</a>.
        </p>


        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="mb-4 text-sm text-red-600">@Model.ErrorMessage</div>
        }
    </div>
</div>
